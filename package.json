{
  "name": "inferno-build",
  "private": true,
  "license": "MIT",
  "author": {
    "name": "Dominic Gannaway",
    "email": "dg@domgan.com"
  },
  "type": "module",
  "bugs": {
    "url": "https://github.com/infernojs/inferno/issues"
  },
  "homepage": "https://github.com/infernojs/inferno#readme",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/infernojs/inferno.git"
  },
  "workspaces": [
    "packages/inferno",
    "packages/inferno-compat",
    "packages/inferno-animation",
    "packages/inferno-create-element",
    "packages/inferno-hydrate",
    "packages/inferno-extras",
    "packages/inferno-hyperscript",
    "packages/inferno-mobx",
    "packages/inferno-redux",
    "packages/inferno-router",
    "packages/inferno-server",
    "packages/inferno-shared",
    "packages/inferno-clone-vnode",
    "packages/inferno-test-utils",
    "packages/inferno-utils",
    "packages/inferno-vnode-flags"
  ],
  "scripts": {
    "clean": "lerna exec -- rimraf dist tmpDist .rpt2_cache_development .rpt2_cache_production package-lock.json",
    "coveralls": "coveralls < coverage/lcov.info",
    "debug": "node --inspect-brk ./node_modules/jest/bin/jest --runInBand --no-cache --no-watchman",
    "docs-build": "cross-env NODE_ENV=production node docs/build.js",
    "docs-build:dev": "node docs/build.js",
    "prebuild": "npm run clean",
    "postbuild": "rimraf build; lerna exec -- rimraf tmpDist",
    "build": "npm run clean && tsc --build && npm run build:move-compiled && npm run build:move-types && npm run build:bundle && npm run print:size",
    "build:bundle": "lerna exec --stream -- node ../../scripts/rollup/build.js",
    "build:move-types": "lerna exec -- node ../../scripts/bundle/move-typedefs.js",
    "build:move-compiled": "lerna exec -- node ../../scripts/bundle/move-compiled.js",
    "print:size": "node scripts/bundle/bundle-size.js",
    "install:browsertest": "cd fixtures/browser && npm install",
    "lint": "eslint packages/*",
    "lint:fix": "eslint --fix packages/*",
    "publish": "lerna publish --exact --force-publish=*",
    "alpha": "lerna publish prerelease --dist-tag next --exact --force-publish=*",
    "version": "npm run build && npm run docs-build && git add docs && npm run test",
    "postinstall": "npm run install:browsertest && npm run build",
    "prettier": "prettier --write packages/*",
    "test": "npm run test:node && npm run test:node-nodom && npm run test:browser",
    "test:transformers": "cross-env InfernoCompat=0 npm run --prefix fixtures/browser test:swc && npm run --prefix fixtures/browser test:ts && npm run --prefix fixtures/browser test:swc",
    "test:node": "cross-env NODE_ENV=test jest --config --no-watchman",
    "test:node:debug": "cross-env NODE_ENV=test node --inspect-brk node_modules/jest/bin/jest.js --config --no-watchman --runInBand",
    "test:node-nodom": "cross-env NODE_ENV=test jest --config ./jest.config-nodom.js --no-watchman",
    "test:coverage": "cross-env NODE_ENV=test jest --runInBand --coverage --no-watchman",
    "test:browser": "npm run test:browser:nocompat && npm run test:browser:compat",
    "test:browser:compat": "cross-env InfernoCompat=1 npm run --prefix fixtures/browser test:swc",
    "test:browser:nocompat": "cross-env InfernoCompat=0 npm run --prefix fixtures/browser test:swc",
    "test:browser:debug": "cross-env InfernoCompat=1 npm run --prefix fixtures/browser debug:swc",
    "test:browser:debug-nocompat": "cross-env InfernoCompat=0 npm run --prefix fixtures/browser debug:swc",
    "test:browser:sauce": "npm run --prefix fixtures/browser test",
    "test:react": "npm run --prefix fixtures/react test -- --forceExit",
    "test:memory": "node --expose-gc scripts/fakedom/uibench-reactlike/start.js",
    "test:memory:js-framework": "node --expose-gc scripts/fakedom/js-framework-bench/start.js",
    "test:memory:lifecycle": "node --expose-gc scripts/fakedom/uibench-lifecycle/start.js",
    "test:memory:lifecycle:debug": "node --inspect-brk --expose-gc scripts/fakedom/uibench-lifecycle/start.js",
    "test:memory:js-framework:debug": "node --inspect-brk --expose-gc scripts/fakedom/js-framework-bench/start.js"
  },
  "devDependencies": {
    "@babel/core": "^7.26.8",
    "@babel/plugin-proposal-class-properties": "7.18.6",
    "@babel/plugin-transform-modules-commonjs": "^7.26.3",
    "@babel/preset-env": "7.26.8",
    "@babel/preset-typescript": "^7.26.0",
    "@eslint/js": "^9.20.0",
    "@rollup/plugin-alias": "^5.1.1",
    "@rollup/plugin-babel": "^6.0.4",
    "@rollup/plugin-commonjs": "^28.0.2",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^16.0.0",
    "@rollup/plugin-replace": "^6.0.2",
    "@rollup/plugin-terser": "^0.4.4",
    "@swc/core": "1.10.15",
    "@swc/jest": "^0.2.37",
    "@types/jest": "^29.5.14",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^22.13.1",
    "@typescript-eslint/eslint-plugin": "^8.23.0",
    "@typescript-eslint/parser": "^8.23.0",
    "babel-plugin-inferno": "6.8.3",
    "cli-table": "^0.3.11",
    "concat-stream": "^2.0.0",
    "coveralls-next": "^4.2.1",
    "cross-env": "^7.0.3",
    "d3-scale-chromatic": "^3.1.0",
    "eslint": "^9",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-inferno": "^7.37.7",
    "eslint-plugin-prettier": "^5.2.3",
    "eslint-plugin-promise": "^7.2.1",
    "filesize": "^10.1.6",
    "fs-extra": "^11.3.0",
    "globals": "^15.14.0",
    "gzip-size": "^7.0.0",
    "history": "^5.3.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-jasmine2": "^29.7.0",
    "jest-silent-reporter": "^0.6.0",
    "jsdom": "^26.0.0",
    "lerna": "^8",
    "minimist": "^1.2.8",
    "mobx": "^6.13.6",
    "perf-monitor": "^0.6.0",
    "prettier": "^3.5.0",
    "rimraf": "^6",
    "rollup": "4.34.6",
    "swc-loader": "^0.2.6",
    "swc-plugin-inferno": "^2.2.1",
    "ts-plugin-inferno": "^6.1.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.23.0"
  }
}

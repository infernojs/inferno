{
  "name": "inferno-build",
  "private": true,
  "description": "A framework for building lightning fast user interfaces",
  "version": "0.4.5",
  "license": "MPL-2.0",
  "author": {
    "name": "Dominic Gannaway",
    "email": "dg@domgan.com"
  },
  "bugs": {
    "url": "https://github.com/trueadm/inferno/issues"
  },
  "devDependencies": {
    "babel-cli": "^6.4.0",
    "babel-eslint": "^5.0.0-beta6",
    "babel-loader": "^6.2.1",
    "babel-preset-es2015": "^6.3.13",
    "babel-preset-es2015-rollup": "^1.0.0",
    "babel-preset-stage-0": "^6.3.13",
    "babel-register": "^6.3.13",
    "chai": "^3.4.1",
    "eslint": "^1.10.3",
    "expect": "1.13.4",
    "glob": "^6.0.4",
    "isparta": "^4.0.0",
    "isparta-loader": "^2.0.0",
    "karma": "0.13.19",
    "karma-coverage": "^0.5.3",
    "karma-coveralls": "^1.1.2",
    "karma-expect": "1.1.1",
    "karma-mocha": "^0.2.1",
    "karma-mocha-reporter": "^1.1.5",
    "karma-sinon-chai": "^1.1.0",
    "karma-sourcemap-loader": "^0.3.6",
    "karma-webpack": "^1.7.0",
    "mocha": "^2.3.4",
    "mocha-lcov-reporter": "^1.0.0",
    "mocha-loader": "^0.7.1",
    "rollup": "^0.24.1",
    "rollup-plugin-babel": "2.3.8",
    "rollup-plugin-npm": "^1.2.1",
    "rollup-plugin-replace": "^1.1.0",
    "sinon": "^1.17.2",
    "sinon-chai": "^2.8.0",
    "uglify-js": "^2.6.1",
    "webpack": "^1.12.9",
    "webpack-dev-server": "^1.14.0"
  },
  "dependencies": {
    "babel-core": "^6.4.0",
    "babel-plugin-inferno": "^0.2.9",
    "babel-plugin-syntax-jsx": "^6.3.13",
    "babel-plugin-syntax-object-rest-spread": "^6.3.13",
    "babel-plugin-transform-object-rest-spread": "^6.3.13",
    "karma-chrome-launcher": "^0.2.2",
    "pre-commit": "^1.1.2",
    "mkdirp": "^0.5.1",
    "rimraf": "^2.5.0",
    "npm-check-updates": "^2.5.6"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "homepage": "https://github.com/trueadm/inferno#readme",
  "jsnext:main": "src/index.js",
  "keywords": [
    "babel",
    "react",
    "inferno",
    "framework",
    "interfaces",
    "user interfaces",
    "html",
    "renderToString",
    "server",
    "dom",
    "browser",
    "rollup"
  ],
  "main": "./dist/inferno.min.js",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/trueadm/inferno.git"
  },
  "scripts": {
    "clean": "rimraf coverage/ dist/",
    "build:inferno-dom:dev": "node config/rollup.config.js dev dist packages/inferno-dom/src inferno-dom InfernoDOM",
    "build:inferno-dom:prod": "node config/rollup.config.js prod dist packages/inferno-dom/src inferno-dom InfernoDOM",
    "build:inferno-server:dev": "node config/rollup.config.js dev dist packages/inferno-server/src inferno-server InfernoServer",
    "build:inferno-server:prod": "node config/rollup.config.js prod dist packages/inferno-server/src inferno-server InfernoServer",
    "build:inferno:dev": "node config/rollup.config.js dev dist packages/inferno/src inferno Inferno",
    "build:inferno:prod": "node config/rollup.config.js prod dist packages/inferno/src inferno Inferno",
    "build": "npm run build:inferno-dom:dev && npm run build:inferno-dom:prod && npm run build:inferno:dev && npm run build:inferno:prod && npm run build:inferno-server:dev && npm run build:inferno-server:prod",
    "browser": "webpack-dev-server --quiet --config config/webpack.dev.conf.js --host 0.0.0.0",
    "test:server": "mocha --opts config/mocha.opts",
    "test:browser": "karma start config/karma.conf.js --single-run",
    "test": "npm run test:browser && npm run test:server",
    "lint": "eslint src/ test/specs/",
    "lint:fix": "eslint --fix ./src/**/*.js",
    "lint:tests": "eslint test/specs/",
    "lint:source": "eslint src/",
    "watch:server": "npm run test:server -- --watch",
    "watch:browser": "./node_modules/.bin/karma start --auto-watch --no-single-run",
    "packages": "npm list --depth=0",
    "package:reinstall": "npm run package:purge && npm install",
    "package:check": "./node_modules/.bin/ncu",
    "package:upgrade": "./node_modules/.bin/ncu -u",
    "package:prod": "./node_modules/.bin/ncu -u",
    "package:dev": "./node_modules/.bin/ncu -p -u",
    "preversion": "[[ -z $(git status --porcelain) ]] && npm run build && git add -A dist && git commit -m 'Build lib'",
    "postpublish": "git push origin master --follow-tags"
  },
  "pre-commit": [
    "lint:source",
    "test"
  ]
}

{
	"version": "2.1.4",
	"compilerOptions": {
		"baseUrl": ".",
		"target": "es6",
		"module": "es6",
		"allowJs": false,
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"declaration": true,
		"outDir": "dist-es",
		"sourceMap": false,
		"lib": [
			"es6",
			"es7",
			"dom"
		],
		"jsx": "preserve",
		"noUnusedLocals": true,
		"strictNullChecks": false,
		"removeComments": false
	},
	"include": [
		"src/**/*",
		"packages/*/src/**/*"
  ],
	"paths": {
		"inferno": "../packages/inferno",
		"inferno-vnode-flags": "../packages/inferno-vnode-flags",
		"inferno-helpers": "../packages/inferno-helpers"
	}
}

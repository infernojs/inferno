{
	"version": "2.1.4",
	"compilerOptions": {
		"target": "es6",
		"module": "es6",
		"allowJs": false,
		"allowSyntheticDefaultImports": true,
		"sourceMap": true,
		"lib": [
			"es6",
			"es7",
			"dom"
		],
		"types": [
			"node",
			"mocha",
			"sinon",
			"chai",
			"mobx",
			"path-to-regexp"
		],
		"jsx": "preserve",
		"noUnusedLocals": true,
		"strictNullChecks": false,
		"removeComments": false
	},
	"include": [
		"src/**/*"
  ],
	"exclude": [
		"node_modules"
	]
}
